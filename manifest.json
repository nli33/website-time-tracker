{
  "manifest_version": 3,
  "name": "Website Time Tracker",
  "version": "1.0.0",
  "description": "Track time spent per website (by domain) locally. Daily timeline and pie chart. All data stays on your device.",
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "idle"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Website Time Tracker"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "incognito": "split"
}
